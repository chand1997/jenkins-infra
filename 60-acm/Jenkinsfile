pipeline{
    agent { label 'agent-1'}
    environment{
        project = "expense"
    }
    parameters{
        choice(name: 'ACTION', choices: ['apply', 'destroy'], description: 'Pick something')
    }
    stages{
        stage('apply'){
            when{
                expression{
                    params.ACTION == 'apply'
                }
            }
            steps{
                script{
                    sh """
                        echo "terraform init and apply 60-acm"
                    """
                }
            }
        }
        stage('destroy'){
            when{
                expression{
                    params.ACTION == 'destroy'
                }
            }
            steps{
                script{
                    sh """
                        echo "terraform destroy 60-acm"
                    """
                }
            }
        }
        stage('trigger-ingress'){
            when{
                expression{
                    params.ACTION == 'apply'
                }
            }
            steps{
                 build job: '70-ingress', parameters: [string(name: 'ACTION', value: 'apply')], propagate: true
            }
        }
    }
    post{
        always{
            echo "Runs always"
            deleteDir()
        }
        success{
            echo "Runs when build is success"
        }
        failure{
            echo "Runs when build is failed"
        }
        
    }
}